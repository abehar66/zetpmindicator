<mvc:View 
  id="IRMView"  
  controllerName="zetpmindicator.controller.Worklist"  
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core" 
  xmlns:m="sap.m" 
  xmlns:l="sap.ui.layout" >  
  <f:SimpleForm		
		id="IRMForm"
		columnsL="3"
		columnsM="3"
		editable="true"
		layout="ResponsiveGridLayout">		
		<f:content>	
             <Table
                id="tableIRM"
                width="auto"
                items="{
                    path: 'ReportModel>/IRMSet',
                    sorter: {
                        path: 'Workcenter',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar id="headerflowIRM" >
                        <Title
                            id="tableHeaderIRM"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer id="headerSpacerIRM" />
                        
                        <SearchField
                            id="searchFieldIRM"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    id="headerLayout"
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                         
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="IRMnameColumn1">
                        <Text text="{i18n>tableColumnWorkcenterTitle}" id="IRMcol1"/>
                    </Column>                                                    
                </columns>

                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItemIRM"
                        type="Navigation"
                        press=".onPress">                                              
                        <Text id="_IDGenIRMText1" text="{ReportModel>Workcenterdescr}"/>                        
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:SimpleForm>	
</mvc:View> 
