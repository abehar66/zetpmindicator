<mvc:View
    controllerName="zetpmindicator.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page1"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                id="Title1"
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:titleCustomTextActions>
            <Button id="IdBtnMostrar" icon="sap-icon://kpi-corporate-performance" 
                                 tooltip="Mostrar Indicadores" 
                                 text="{i18n>buttonDisplay}" 
                                 type="Accept"
                                 press="onDisplay" visible="true" />                             
      </semantic:titleCustomTextActions> 

      <semantic:headerContent>
         <VBox alignItems="Center"  id="WorklistBox1">

          <HBox alignItems="Center" id="WorklistBox4"> 
           <Label id="idtaller" text="Taller: " labelFor="IdTaller" visible="true" />
           <ComboBox
                    required="true" 
                    id="IdTaller"                                    
                    width="200px"                                      
                    items="{
                            path: 'ReportModel>/Taller',
                            sorter: { path: 'Key' }
                           }"  >
                     <core:Item key="{ReportModel>Key}" text="{ReportModel>Value}" />                         
            </ComboBox>  
          </HBox>  

         <HBox alignItems="Center" id="WorklistBox2">
            <Label id="WorkListLabel" text="Desde: " labelFor="Desde" visible="true" />
            <DatePicker	id="Desde"			                	
                            value="{path: 'ReportModel>/Parameters/Desde', type:'sap.ui.model.type.Date' ,
                                    formatOptions: { style: 'medium', strictParsing: true}   }"  
                            displayFormat="medium"                                                     
                            valueFormat="dd-mm-yyyy"
			                change="handleChange"                            
			                visible="true" />                             
           </HBox>                   
          <HBox alignItems="Center" id="WorklistBox3">     
           <Label text="Hasta: " labelFor="Hasta" visible="true"/>
            <DatePicker	id="Hasta"
			                value="{path: 'ReportModel>/Parameters/Hasta', type:'sap.ui.model.type.Date' ,
                                    formatOptions: { style: 'medium', strictParsing: true}   }"  
                            displayFormat="medium"                                                     
                            valueFormat="dd-mm-yyyy"
			                change="handleChange"
			                visible="true"/> 
                          
           </HBox>
          
         </VBox> 
       </semantic:headerContent> 

        <semantic:content>     
           <IconTabBar
				id="iconTabBar"
				headerBackgroundDesign="Transparent"
				class="sapUiResponsiveContentPadding"
				binding="{ReportModel}"
				select=""
				selectedKey="">				
                <items>
                    <IconTabFilter id="IRMTab" text="Indicador IRM" key="key1">
						<mvc:XMLView id="IRMView1" viewName="zetpmindicator.view.IRM"></mvc:XMLView>
					</IconTabFilter>						

                    <IconTabFilter id="IRGTab" text="Indicador IRG" key="key2">
						<mvc:XMLView id="IRGView1" viewName="zetpmindicator.view.IRG"></mvc:XMLView>
					</IconTabFilter>	

                    <IconTabFilter id="IFPTab" text="Indicador IFP" key="key3">
						<mvc:XMLView id="IFPView1" viewName="zetpmindicator.view.IFP"></mvc:XMLView>
					</IconTabFilter>                 					
                    						
                </items>                
			</IconTabBar> 
   </semantic:content> 

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail1" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

    </semantic:SemanticPage>

</mvc:View>